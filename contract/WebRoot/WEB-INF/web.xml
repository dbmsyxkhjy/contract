<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" 
	xmlns="http://java.sun.com/xml/ns/javaee" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
  
	<!-- Configure the access of Servlet -->
	<servlet>
		<!-- Set Servlet name-->
		<servlet-name>index</servlet-name>
		<!-- Set the Servlet class that processing requests: complete package path + class name -->
		<servlet-class>com.ruanko.web.IndexServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<!-- The Servlet name should keep consistent as above-mentioned -->
		<servlet-name>index</servlet-name>
		<!-- The access path of Servlet -->
		<url-pattern>/index</url-pattern>
	</servlet-mapping>

</web-app>
